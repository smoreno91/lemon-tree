									<?php if($show_readmore): ?> <div class="readmore"><a href="<?php echo $post->getAddress(); ?>">Continue reading</a></div> <?php endif; ?>
								</div> 
									  
							</div>
						<?php 
						$i++;
						if($i % $numberrow == 0)echo '</div>';  ?>
						<?php endforeach; ?>
						<?php if($i % $numberrow != 0)echo '</div>'; ?>
					</div>
				</div> 
			</div> 
			
		</div>
