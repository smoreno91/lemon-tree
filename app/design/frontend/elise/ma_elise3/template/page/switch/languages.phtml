<?php if(count($this->getStores())>1): ?>
<div class="form-language">
    <label><?php echo $this->__('Your Language:') ?></label>
		<?php foreach ($this->getStores() as $_lang): ?>
            <?php if($_lang->getId() == $this->getCurrentStoreId()): ?>
            <div class="select-lang"> <?php echo $this->htmlEscape($_lang->getName()) ?></div>
            <?php endif?>
		<?php endforeach; ?>
    <ul class="select-option">
		<?php foreach ($this->getStores() as $_lang): ?>
		<?php $_actived = ($_lang->getId() == $this->getCurrentStoreId()) ? 'active' : '' ?>
			<li class="select-item <?php echo $_actived ?>">
				<a href="<?php echo $_lang->getCurrentUrl() ?>">
					 <?php echo $this->escapeHtml($_lang->getName()) ?>			
				</a>
			</li> 
		<?php endforeach; ?>
	</ul>
    
</div>
<?php endif; ?>

