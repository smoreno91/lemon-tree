<?xml version="1.0"?>
<config>
    <modules>
        <Magentothem_Categorytabsliders>
            <version>0.1.0</version>
        </Magentothem_Categorytabsliders>
    </modules>
    <frontend>
        <routers>
            <categorytabsliders>
                <use>standard</use>
                <args>
                    <module>Magentothem_Categorytabsliders</module>
                    <frontName>categorytabsliders</frontName>
                </args>
            </categorytabsliders>
        </routers>
        <layout>
            <updates>
                <categorytabsliders>
                    <file>categorytabsliders.xml</file>
                </categorytabsliders>
            </updates>
        </layout>
    </frontend>
		 <adminhtml>
			<menu>
				<magentothem translate="title" module="categorytabsliders">
					<title>Magentothem</title>
					<sort_order>71</sort_order>               
					<children>
						<categorytabsliders translate="title" module="categorytabsliders">
